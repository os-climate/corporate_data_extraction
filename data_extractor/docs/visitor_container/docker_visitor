FROM ubuntu:22.04
SHELL ["/bin/bash", "-c"]

# no prompt during installation:
ARG DEBIAN_FRONTEND=noninteractive

RUN apt-get update
RUN apt-get install -y apt-utils wget python3 python3-pip vim

COPY ./requirements.txt /app/code/requirements.txt
COPY ./coordinator_settings.yaml /app/code/coordinator_settings.yaml
COPY ./visitor_main.py /app/code/visitor_main.py
WORKDIR /app/code
RUN pip install -r requirements.txt

# Adding vs code server
RUN mkdir -p /.vscode-server
RUN mkdir -p /.vscode-remote
RUN chmod -R 777 /.vscode-server
RUN chmod -R 777 /.vscode-remote

CMD sleep infinity